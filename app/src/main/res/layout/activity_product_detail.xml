<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductDetailActivity">

    <TextView
        android:id="@+id/product_name_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Name:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toBottomOf="@+id/product_name_dialog" />

    <EditText
        android:id="@+id/product_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="@color/colorTextAccent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView25"
        app:layout_constraintEnd_toEndOf="@+id/product_energy_txt"
        app:layout_constraintStart_toEndOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Energy:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/product_energy_txt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:autofillHints="0.0"
        android:ems="5"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="@color/colorTextAccent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView27"
        app:layout_constraintStart_toStartOf="@+id/product_carbohydrate_txt" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Protein:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <EditText
        android:id="@+id/product_protein_txt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:autofillHints="0.0"
        android:ems="5"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="@color/colorTextAccent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/product_carbohydrate_txt" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Fat:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <EditText
        android:id="@+id/product_fat_txt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:autofillHints="0.0"
        android:ems="5"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="@color/colorTextAccent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView30"
        app:layout_constraintStart_toStartOf="@+id/product_carbohydrate_txt" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Carbohydrate:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <EditText
        android:id="@+id/product_carbohydrate_txt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="0.0"
        android:ems="6"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColorHighlight="@color/colorAccent"
        android:textColorLink="@color/colorTextAccent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView31" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31">

        <Button
            android:id="@+id/ok_product_btn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:onClick="onOKClick"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/cancel_product_btn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:layout_weight="1"
            android:onClick="onCancelClick"
            android:text="@android:string/cancel" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>